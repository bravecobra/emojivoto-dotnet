@page "/leaderboard"
@inherits Fluxor.Blazor.Web.Components.FluxorComponent


<div class="background">
    <div class="page-content container-fluid">
        <div class="row">
            <div class="col-md-12">
                @if (LeaderBoardState.Value.Error != string.Empty)
                {
                    <div class="error">Error loading leaderboard.</div>
                }
                <h1>EMOJI VOTE LEADERBOARD </h1>
                <NavLink href="/">
                    <div class="btn btn-blue">Vote on your favorite</div></NavLink>
                <div class="emoji-list">
                    @if (!LeaderBoardState.Value.IsLoading)
                    {
                        foreach (var result in LeaderBoardState.Value?.Results)
                        {
                            var title = $"{result.Votes} votes";
                            <div class="emoji" title="@title">
                                <div>@result.Unicode</div>
                                @if (result.Votes > 0)
                                {
                                    <div class="counter">@result.Votes</div>
                                }
                            </div>
                        }
                    }
                    @* <div class="footer-text"> *@
                    @*     <p class="footer-experiment">A <a href='https://buoyant.io'>Buoyant</a> social experiment</p> *@
                    @*     <p>© 2018 Buoyant, Inc. All Rights Reserved.</p> *@
                    @* </div> *@
                </div>
            </div>
        </div>
    </div>
</div>
