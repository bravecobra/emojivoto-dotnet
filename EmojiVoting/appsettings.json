{
  "ConnectionStrings": {
    "DefaultConnection": "DataSource=Voting.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http2"
    }
  },
  "FAILURE_RATE": 0,
  "ARTIFICIAL_DELAY": 0,
  "PROM_PORT": "",
  "OC_AGENT_HOST": "",

  "UseTracingExporter": "otlp",
  "UseMetricsExporter": "otlp",
  "UseLogExporter": "loki",
  "Jaeger": {
    "AgentHost": "localhost",
    "AgentPort": 6831,
    "Endpoint": "http://k8s.local:6831",
    "Protocol": "UdpCompactThrift"
  },
  "Prometheus": {
    "ScrapeResponseCacheDurationMilliseconds": 5000
  },
  "Zipkin": {
    "Endpoint": "http://k8s.local:9411/api/v2/spans"
  },
  "Otlp": {
    "Endpoint": "http://k8s.local:4318"
  },
  "Loki": {
    "Endpoint": "http://k8s.local:3100"
  },
  "AspNetCoreInstrumentation": {
    "RecordException": "true"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Grafana.Loki"
    ],
    "MinimumLevel": {
      "Default": "Debug"
    },
    "WriteTo": [
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://k8s.local:3100",
          "propertiesAsLabels": [
            "app",           
            "level"
          ]
        }
      },
      { "Name": "Console" }
    ]
  }
}
